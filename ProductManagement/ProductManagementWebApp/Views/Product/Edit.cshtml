@model ProductManagementWebApp.Models.ProductViewModel

<div class="container" id="productForm">
    <input type="hidden" name="id" value="@Model.Id"/>
    <div class="form-group">
        Название:@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        Описание:@Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    </div>
</div>



